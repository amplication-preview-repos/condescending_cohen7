datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model OrderItem {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  stocks    Stock[]
  updatedAt DateTime @updatedAt
}

model Order {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Stock {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  location  String?
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  quantity  Int?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt      DateTime          @default(now())
  email          String?           @unique
  firstName      String?
  id             String            @id @default(cuid())
  lastName       String?
  password       String
  role           EnumUserRole?
  roles          Json
  systemPassword String?
  systemUsername String?
  updatedAt      DateTime          @updatedAt
  username       String            @unique
  userRole       EnumUserUserRole?
}

enum EnumUserRole {
  Option1
}

enum EnumUserUserRole {
  Option1
}
